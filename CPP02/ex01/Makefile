NAME = fixed_point
CC = c++
CFLAGS = -Wall -Werror -Wextra -std=c++98
SRC = main.cpp Fixed.cpp
HEADERS = Fixed.hpp
OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(OBJ) $(NAME)

%.o : %.cpp
	$(CC) $(CFLAGS) -c $< -o $@

clean : 
	rm -rf $(OBJ)

fclean : clean
	rm -rf $(NAME)

re : fclean all
